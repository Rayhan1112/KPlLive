<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Khanbhag Premier League"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#eb6b34"
            android:layout_marginTop="10dp"
            android:textSize="24sp"/>


        <TextView
            android:id="@+id/matchnm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#7a5f99"
            android:layout_marginTop="10dp"
            android:textSize="22sp"/>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="140dp"
            android:layout_height="90dp"
            app:cardElevation="20dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/Screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="60sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="27dp"
                android:text="Current Batting  "/>
            <TextView
                android:id="@+id/totalscore"
                android:layout_marginTop="20dp"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:text="Batter"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Runs"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Balls"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player1"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:textColor="#34a8eb"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="100"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="43"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:id="@+id/player2"
                android:textStyle="bold"
                android:textColor="#34a8eb"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

            <TextView

                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="100"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="43"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Bowler Name"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="Overs"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bowlername"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:textColor="#34a8eb"
                android:textStyle="bold"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:text="20"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="13dp"
                android:textSize="20sp"/>
        </LinearLayout>




    </LinearLayout>


</ScrollView>